	[AC_DEFINE(OPT_TRACE)
	 EXTRAOBJS="$EXTRAOBJS trace.o"])

CFLAGS="$saved_CFLAGS"
AC_ARG_WITH(warnings,
	[  --with-warnings         turn on GCC compiler warnings],
	[with_warnings=$withval])
if test -n "$with_warnings"
then
	VC_GCC_WARNINGS
	CFLAGS="$CFLAGS $vc_warn_CFLAGS"
fi

